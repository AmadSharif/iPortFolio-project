@page
@model iPortfolio.Pages.myadmin.ShowExperianceModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <h1>Show Experiance</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Job Title</th>
                        <th scope="col">Loacation</th>
                        <th scope="col">Start Year</th>
                        <th scope="col">End Year</th>
                        <th scope="col">Description</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.experiance)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.JobTitle</td>
                            <td>@item.Location</td>
                            <td>@item.StartYear</td>
                            <td>@item.EndYear</td>
                            <td>@item.Desc</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateExperiance" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>