@page
@model iPortfolio.Pages.myadmin.ShowSocialNetworksModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <h1>Show Social Networks</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Facebook</th>
                        <th scope="col">Twitter</th>
                        <th scope="col">LinkedIn</th>
                        <th scope="col">Instagram</th>
                        <th scope="col">Skype</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.socialNetworks)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Facebook</td>
                            <td>@item.Twitter</td>
                            <td>@item.LinkedIn</td>
                            <td>@item.Instagram</td>
                            <td>@item.Skype</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateSocialNetworks" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>