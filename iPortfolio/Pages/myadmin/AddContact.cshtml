@page
@model iPortfolio.Pages.myadmin.AddContactModel
@{
}

<div class="container">
    <form method="post">
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <h1>Add Contact</h1>
            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Name</label>
                <input class="form-control" asp-for="contact.Name">
                <span asp-validation-for="contact.Name"></span>
            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Email</label>
                <input class="form-control" asp-for="contact.Email">
                <span asp-validation-for="contact.Email"></span>

            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Subject</label>
                <input class="form-control" asp-for="contact.Subject">
                <span asp-validation-for="contact.Subject"></span>

            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Message</label>
                <input class="form-control" asp-for="contact.Message">
                <span asp-validation-for="contact.Message"></span>

            </div>
        </div>
      
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <input type="submit" value="Add Contact" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>